<div>
  <h1><%= @post.title %></h1>
  <p><%= @post.body %></p>
</div>

<div class="comments">
</div>

<div class="links">
  <%= link_to "Home", :root %>
  <% if current_user.id == @author.id %>
    <%= link_to "Destroy", post_path(@post), data:
    {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                      } %>
  <% else %>
    <h3>Like This Post</h3>

  <% end %>
</div>


